<project xmlns:ivy="antlib:org.apache.ivy.ant" xmlns:if="ant:if" name="flasher" default="install">
	<target name="install" description="install all components">
		<echo>org.muhkuh.tools.flasher</echo>
		
		<copy todir="${install.documentation}" includeEmptyDirs="true">
			<fileset dir="doc" />
		</copy>
		<copy todir="${install.firmware}" includeEmptyDirs="true">
			<fileset dir="netx" />
		</copy>
		<copy todir="${install.lua}" includeEmptyDirs="true">
			<fileset dir="lua" />
		</copy>
	</target>
</project>
