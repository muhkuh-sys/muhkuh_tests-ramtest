<?xml version="1.0"?>
<HBootImage type="REGULAR">
	<Chunks>
		<!-- Open all Firewalls with small program running at CR7 -->
		<Data>
			<File name="@tElfCR7OpenFirewalls" />
		</Data>
		<Execute>
			<File name="@tElfCR7OpenFirewalls" />
		</Execute>

		<!-- Load Programm for CA9 core0 and start afterwards -->
		<Data>
			<File name="@tElfCA9core0" />
		</Data>
		<ExecuteCA9>
			<Core0>
				<File name="@tElfCA9core0" start="start_core0" />
				<R0>0x12345678</R0>
				<R1>0x23456789</R1>
				<R2>0x3456789a</R2>
				<R3>0x456789ab</R3>
			</Core0>
		</ExecuteCA9>

		<!-- On CR7 jump to the WFE loop in ROM. -->
		<Execute>
			<Address>WFE_Loop</Address>
		</Execute>
	</Chunks>
</HBootImage>

